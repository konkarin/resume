---
interface Props {
  logo: string;
  title: string;
  description: string;
}
const { logo, title, description } = Astro.props;
---

<div class="skill-item">
  <img src={logo} alt="" class="skill-logo" />
  <div class="skill-content">
    <h3 class="skill-name">{title}</h3>
    <p class="skill-description">{description}</p>
  </div>
</div>

<style>
  .skill-item {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin: 1rem 0;
  }

  .skill-logo {
    width: 50px;
  }

  .skill-content {
    display: flex;
    flex-direction: column;
  }

  .skill-name {
    font-size: 1.1rem;
    font-weight: bold;
    margin: 0;
  }

  .skill-description {
    margin: 0;
    font-size: 1rem;
    line-height: 1.6;
  }
</style>
